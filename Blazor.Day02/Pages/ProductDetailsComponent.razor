@page "/products/details/{id:int}"

<PageTitle>Product Details</PageTitle>
<h3>ProductDetailsComponent</h3>

@if(@Product == null){
	<h4 class="alert-info">Wait while Loading</h4>
}
else
{
    <div class="card" style="width:400px">
        <img class="card-img-top" src="@Product.ImageURL" style="width: 100%; height: 250px;" alt="Card image">
        <div class="card-body">
            <h4 class="card-title">@Product.Name</h4>
            <p class="card-text">@Product.price.ToString("C")</p>
            <a href="/categories" class="btn btn-primary">Back To list</a>
        </div>
    </div>
}
